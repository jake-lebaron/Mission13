@{
    ViewData["Title"] = "Home Page";
}

@model List<Bowler>

<h1>Bowlers</h1>

@*<a asp-controller="Home" asp-action="AddBowler" asp-route-bowlerid="b.BowlerID">Add New Bowler</a>*@

<h6>Teams:</h6>
<div>
    @foreach (Team t in ViewBag.Teams)
    {
        <a asp-controller="Home" asp-action="FilterBowler" asp-route-teamid="@t.TeamID">@t.TeamName</a>
    }
</div>
<br />
<a asp-controller="Home" asp-action="AddBowler">Add New Bowler</a>
<table class="table table-bordered table-striped">
    <thead class="font-weight-bold">
        <tr>
            <td>Bowler Name</td>
            <td>Address</td>
            <td>City</td>
            <td>State</td>
            <td>Zip</td>
            <td>Phone Number</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.BowlerLastName, @b.BowlerFirstName @b.BowlerMiddleInit</td>
                <td>@b.BowlerAddress</td>
                <td>@b.BowlerCity</td>
                <td>@b.BowlerState</td>
                <td>@b.BowlerZip</td>
                <td>@b.BowlerPhoneNumber</td>

                <td><a asp-controller="Home" asp-action="EditBowler" asp-route-bowlerid="@b.BowlerID">Edit</a></td>
                <td><a asp-controller="Home" asp-action="DeleteBowler" asp-route-bowlerid="@b.BowlerID">Delete</a></td>
            </tr>
        }
    </tbody>
</table>